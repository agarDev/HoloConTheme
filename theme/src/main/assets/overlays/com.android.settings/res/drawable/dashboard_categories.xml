<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item>
    <shape>
      <padding android:top="5dp" android:right="5dp" android:bottom="0dp" android:left="5dp" />
      <solid android:color="#00000000" />
    </shape>
  </item>

  <item>
    <shape>
      <padding android:top="1dp" android:right="2dp" android:bottom="0dp" android:left="2dp" />
      <solid android:color="#03000000" />
      <corners android:radius="5dp" />
    </shape>
  </item>

  <item>
    <shape>
      <padding android:top="1dp" android:right="2dp" android:bottom="1dp" android:left="2dp" />
      <solid android:color="#07000000" />
      <corners android:radius="5dp" />
    </shape>
  </item>

  <!-- Add shadow -->
  <item>
    <shape>
       <padding android:top="0dp" android:right="2dp" android:bottom="1dp" android:left="2dp" />
       <solid android:color="#09000000" />
       <corners android:radius="5dp" />
    </shape>
  </item>

  <!-- Add shadow -->
  <item>
    <shape>
      <padding android:top="0dp" android:right="2dp" android:bottom="1dp" android:left="2dp" />
      <solid android:color="#09000000" />
      <corners android:radius="5dp" />
    </shape>
  </item>

  <!-- Show outer square -->
  <item>
    <shape>
      <corners android:radius="9dp" />
      <solid android:color="#ffffff" />
    </shape>
  </item>
</layer-list>